<% if @resource.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@resource.errors.cound, "error") %>
    </div>
    <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
  </div>
  <% end %>