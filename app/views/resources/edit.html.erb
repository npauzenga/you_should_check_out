<link href='https://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>

<% provide(:title, 'Edit') %> 
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="cursive">Make this better!</h1>
    <%= form_for(@resource) do |r| %>
      <%= render 'shared/error_messages' %>
      
      <%= r.label :title %>
      <%= r.text_field :title, class: 'form-control' %>
      
      <%= r.label :description %>
      <%= r.text_field :description, class: 'form-control' %>
      
      <%= r.label :link %>
      <%= r.text_field :link, class: 'form-control' %>
      
      <%= r.submit "Update Resource", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>